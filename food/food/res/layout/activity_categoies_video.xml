<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Switch
        android:id="@+id/switchGetByLocale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:checked="true"
        android:text="@string/get_by_locale" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="1dp" >

            <LinearLayout
                android:id="@+id/layout_1"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/selector_btn_chanel_color"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="5dp" >

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/chanel1" />

                <TextView
                    android:id="@+id/btn_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:duplicateParentState="true"
                    android:paddingLeft="10dp"
                    android:text="@string/hello_world"
                    android:textColor="@drawable/selector_btn_normal_text_color_2"
                    android:textSize="25sp" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp" />

            <LinearLayout
                android:id="@+id/layout_2"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/selector_btn_chanel_color"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="5dp" >

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/chanel2" />

                <TextView
                    android:id="@+id/btn_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:duplicateParentState="true"
                    android:paddingLeft="10dp"
                    android:text="@string/hello_world"
                    android:textColor="@drawable/selector_btn_normal_text_color_2"
                    android:textSize="25sp" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp" />

            <LinearLayout
                android:id="@+id/layout_3"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/selector_btn_chanel_color"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="5dp" >

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/chanel3" />

                <TextView
                    android:id="@+id/btn_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:duplicateParentState="true"
                    android:paddingLeft="10dp"
                    android:text="@string/hello_world"
                    android:textColor="@drawable/selector_btn_normal_text_color_2"
                    android:textSize="25sp" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp" />

            <LinearLayout
                android:id="@+id/layout_4"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/selector_btn_chanel_color"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="5dp" >

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/chanel4" />

                <TextView
                    android:id="@+id/btn_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:duplicateParentState="true"
                    android:paddingLeft="10dp"
                    android:text="@string/hello_world"
                    android:textColor="@drawable/selector_btn_normal_text_color_2"
                    android:textSize="25sp" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp" />

            <LinearLayout
                android:id="@+id/layout_5"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/selector_btn_chanel_color"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="5dp" >

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/chanel5" />

                <TextView
                    android:id="@+id/btn_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:duplicateParentState="true"
                    android:paddingLeft="10dp"
                    android:text="@string/hello_world"
                    android:textColor="@drawable/selector_btn_normal_text_color_2"
                    android:textSize="25sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>